# Configurações básicas
DirectoryIndex index.php index.html

# Bloquear acesso a arquivos e diretórios sensíveis
<Files ".env">
    Require all denied
</Files>

<FilesMatch "\.(log|sql|bak|backup|tmp|old|swp)$">
    Require all denied
</FilesMatch>

<Files ~ "^\.">
    Require all denied
</Files>

# Bloquear acesso a diretórios sensíveis via FilesMatch
# Nota: remover 'config' daqui pois bloqueava arquivos como 'configs.php'
<FilesMatch "^(logs|backups|vendor)$" >
    Require all denied
</FilesMatch>

# Permitir acesso aos arquivos PHP necessários
<Files "database.php">
    Require all granted
</Files>

# Headers de segurança robustos
<IfModule mod_headers.c>
    # Prevenir MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Strict Transport Security (descomente quando em HTTPS)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
    
    # Remover header X-Powered-By (não expor tecnologia)
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# Permitir acesso aos arquivos estáticos com cache
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Require all granted
    <IfModule mod_headers.c>
        Header set Cache-Control "max-age=31536000, public"
    </IfModule>
</FilesMatch>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# Melhorias adicionais de performance: ETag / Expires e leverage browser caching para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Remove ETag para reduzir cabeçalhos e permitir cache por proxy
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Rewrite Rules
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirecionar HTTP para HTTPS (comentado por padrão)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Proteger contra ataques comuns
    RewriteCond %{REQUEST_METHOD} ^(HEAD|TRACE|DELETE|TRACK|DEBUG) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquear acesso a arquivos ocultos
    RewriteRule ^\.(.*)$ - [F,L]
</IfModule>

# Permitir arquivos estáticos
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico)$">
    Require all granted
</FilesMatch>

# Compressão GZIP básica
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript
</IfModule>

# Cache básico
<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|ico)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>
